@require './config'

.date 
    margin: 0 0 1em 0
    display: block
    color: #777777
    font-size: 120%

.article-snippet
    margin-bottom: 4em

.action 
    display block
    text-decoration: none
    font-size: .8rem
    padding: 8px
    margin: 5px -7px 5px 7px
    border-radius: 3px
    text-transform: uppercase
    letter-spacing: .03em
    font-weight: 600
    cursor: pointer

.action.ripple 
    border: 1px solid $accentColor
    color: $accentColor
    float: right
    white-space: nowrap
    margin: 0.5em 0.5em

.footer-social
    margin-left 5em
    margin-bottom 2em

.sidebar-button
  display none
  width 1.25rem
  height 1.25rem
  position absolute
  padding 0.6rem
  top 0.6rem
  left 1rem
  cursor pointer
  .icon
    display block
    width 1.25rem
    height 1.25rem

@media (max-width: $MQMobile)
  .sidebar-button
    display block

.icon.outbound
  color #aaa
  display inline-block

.series
    margin-top 0.5em
    margin-bottom 1em
    background-color #f6f5f5
    border-radius 3px

    h3, p
        padding-left 1em
    
    h3
        padding-top 0.5em
        margin-bottom 0
    
    p 
        margin-top 0.5em
    
    ol
        padding-left 3em
        padding-bottom 0.5em